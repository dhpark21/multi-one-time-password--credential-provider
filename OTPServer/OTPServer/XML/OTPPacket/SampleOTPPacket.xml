<!-- This packet could be sent by a client to issue OTP verification -->
<OTPPacket version="1">
  <PID>1234</PID>
  <Message type="VERIFY" mac="{PID timestamp}(sig:c)"/>
  <Data type="PUBLIC_KEY">
    ...
  </Data>
  <Data type="OTP">
    224488
  </Data>
  <Data type="USERNAME">
    user@example.com
  </Data>
</OTPPacket>

